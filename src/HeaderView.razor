@namespace AntDesign.Pro.Layout
@inherits AntProComponentBase

@if (_needFixedHeader)
{
    <Header Style="@_fixedHeaderStyle"></Header>
}
<Header Class="@ClassMapper.Class" Style="@_headerStyle">
    @if (_isTop && !IsMobile)
    {
        <TopNavHeader Mode= "MenuMode.Horizontal" Logo="Logo" MenuData="MenuData" BaseUrl="@BaseUrl"/>
    }
    else
    {
        <GlobalHeader Logo="Logo" Title="@Title" BaseUrl="@BaseUrl">
            @HeaderContentRender
        </GlobalHeader>
    }
</Header>